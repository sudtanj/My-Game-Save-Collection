			<AmbientVolume
				display_name="#confi0_120 Ambient Volume"
				Value="0.9"
				ImmediateUpdate="1"
				Type="Slider">
				<OutputFormat type="Percent"/>
			</AmbientVolume>
		</Sfx>
		<Game display_name="#confi0_102 Game">
			<ShowBubbles
				display_name="#confi0_560 Show Dialog Bubbles"
				Value="0"
				Type="CheckBox"/>
			<AutoFadeInterface
				display_name="#confi0_576 Automatically hide interface"
				Value="1"
				Type="CheckBox"/>
			<MinigamesPanicButton
				display_name="#confi0_580 Show Minigame Panicbutton"
				Value="0"
