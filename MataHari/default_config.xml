					<Text value="#confi0_193 Low"/>
					<Text value="#confi0_194 Medium"/>
					<Text value="#confi0_195 High"/>
				</OutputFormat>
			</SceneLOD>
			<CharacterLOD
				display_name="#confi0_184 Character Quality"
				Value="1"
				Steps="3"
				Type="Slider"
				No_Ingame="1">
				<OutputFormat type="Text">
					<Text value="#confi0_193 Low"/>
					<Text value="#confi0_194 Medium"/>
					<Text value="#confi0_195 High"/>
				</OutputFormat>
			</CharacterLOD>
			<NPCLOD
				display_name="#confi0_352 Background Characters"
				Value="1"
				Type="CheckBox"
				No_Ingame="1"/>
			<Antialiasing
				display_name="#confi0_208 Use Antialiasing"
				Value="1"
				Type="CheckBox"/>
			<Reflections
				display_name="#confi0_388 Reflections"
				Value="1"
				Type="CheckBox"/>
		</Gfx>
		<Sfx display_name="#confi0_101 Sfx">
			<MasterVolume
				display_name="#confi0_56 Master Volume"
				Value="1"
				ImmediateUpdate="1"
				Type="Slider">
				<OutputFormat type="Percent"/>
			</MasterVolume>
			<MusicVolume
				display_name="#confi0_72 Music Volume"
				Value="0.29"
				ImmediateUpdate="1"
				Type="Slider">
				<OutputFormat type="Percent"/>
			</MusicVolume>
			<SpeechVolume
				display_name="#confi0_88 Speech Volume"
				Value="0.75"
				ImmediateUpdate="1"
				Type="Slider">
				<OutputFormat type="Percent"/>
			</SpeechVolume>
			<SfxVolume
				display_name="#confi0_104 Sfx Volume"
				Value="0.7"
				ImmediateUpdate="1"
				Type="Slider">
				<OutputFormat type="Percent"/>
