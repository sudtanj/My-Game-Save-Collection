			</ScreenResolution>
			<RefreshRate
				display_name="#confi0_160 Refresh Rate"
				Value="1"
				Type="Slider"
				No_Ingame="1"
				Needs_Restart="1">
				<OutputFormat type="RefreshRate"/>
			</RefreshRate>
			<GfxQuality
				display_name="#confi0_192 Graphics Quality"
				Value="1"
				Steps="3"
				Type="Slider"
				No_Ingame="1">
				<OutputFormat type="Text">
					<Text value="#confi0_193 Low"/>
					<Text value="#confi0_194 Medium"/>
					<Text value="#confi0_195 High"/>
				</OutputFormat>
			</GfxQuality>
			<ToggleAdvancedGraphics
				display_name="#confi0_240 Show Advance Graphics Settings"
