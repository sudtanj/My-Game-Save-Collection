<?xml version="1.0" encoding="utf-8"?>
<Config>
	<Display
		Fullscreen="1"
		Width="1366"
		Height="768"
		LowRes="1"
		RefreshRate="60"
		AutoConfig="0"
		Window="0"/>
	<Options>
		<Gfx display_name="#confi0_100 Gfx">
			<Gamma
				display_name="#confi0_144 Gamma"
				Value="0.5"
				ImmediateUpdate="1"
				Type="Slider"/>
			<ScreenResolution
				display_name="#confi0_80 Screen Resolution"
				Value="0"
				Type="Slider"
				No_Ingame="1"
				Needs_Restart="1">
				<OutputFormat type="Resolution">
					<Resolution width="1024" height="768"/>
					<Resolution width="1366" height="768"/>
					<Resolution width="1280" height="800"/>
					<Resolution width="1440" height="900"/>
					<Resolution width="1280" height="960"/>
